pipeline{
     agent any 
     environment {
        DOCKERHUB_CREDENTIALS=credentials('rootokay-dockerhub')
      }
    stages {
        stage('git clone') {
            steps {
                git branch: 'main', url: 'https://github.com/RootOkay/jenkins/'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t ipssichris/chrishttpd .'
            }
        }
        stage('Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Push') {
            steps {
                sh 'docker push ipssichris/chrishttpd'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
